  <div class="container">
    <div class="row">
        <div class ="col-sm-12 text-center" id="top-bar">
            <h1>Welcome!</h1>
            
        </div>
        <div class="col-sm-3 text-center"></div>
        <div class="col-sm-6 text-center">    
            <form action="/eatatjoes/create" method="POST">
                <input type="text" class="form-control" name="burger_name" value="" placeholder="Choose a burger to begin">
                <button type="submit" class="btn btn-warning">Grill It!</button>
            </form>
        </div>
        <div class="col-sm-3 text-center"></div>
        <div class ="col-sm-12 text-center">
            <p><h4>Which one will you devour first?</h4></p>
        </div>
        <div class="col-sm-6 text-center" class="task">
            <h5>Menu</h5>
            <div class="row">
                {{#each burger_data}}
                    {{#unless this.devoured}}
                    <div class="col-sm-9 text-center">
                        <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
                    </div>
                    <div class="col-sm-3 text-center">
                        <form class="devour-form button-size">
                            <input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
                            <button type="submit" class="btn btn-warning">Nom Nom!</button>
                        </form>
                    </div>
                    {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-sm-6 text-center" class="task">
            <p><h5>Finished Meal</h5></p>
            {{#each burger_data}}
                {{#if this.devoured}}
                    <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>